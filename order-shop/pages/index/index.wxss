.index_swiper swiper {
  width: 750rpx;
  height: 375rpx;
}
.index_swiper swiper swiper-item image {
  width: 100%;
}
.index_bigType {
  padding-top: 20rpx;
  padding-left: 30rpx;
  padding-bottom: 20rpx;
  text-align:center ;
  background-color: #F7F7F7;
}
.index_bigType .bigTypeRow {
  display: flex;
  padding:10rpx 10rpx
}
.index_bigType .bigTypeRow navigator {
  flex: 1;
}
.index_bigType .bigTypeRow navigator image {
  width: 100rpx;
}

.index_hotProduct .product_title {
  font-size: 32rpx;
  font-weight: 600;
  padding: 20rpx;
  color: var(--themeColor);
  background-color: #E0E0E0;
}
.index_hotProduct .product_list {
  display: flex;
  flex-wrap: wrap;
  padding: 2rpx ;
}
.index_hotProduct .product_list .product_detail {
  display: flex;
  margin: 15rpx;
  width: 100%;
}
/* 开始 */
.index_hotProduct .product_list .product_detail .product_img_wrap{
  flex:2;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 10rpx 0rpx;
}
.index_hotProduct .product_list .product_detail .product_img_wrap image {
 width: 100%;
}
.index_hotProduct .product_list .product_detail .product_info_wrap{
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.index_hotProduct .product_list .product_detail .product_info_wrap .product_name {
  padding-top: 5rpx;
  padding-left: 30rpx;
  font-size: 32rpx;
  font-weight: 400;
}
.index_hotProduct .product_list .product_detail .product_info_wrap .product_description {
  color:#746969;
  padding: 20rpx 30rpx;
}
.index_hotProduct .product_list .product_detail .product_info_wrap .product_price_wrap {
  display: flex;
  margin: 20rpx;
  padding-top: 10rpx;
  justify-content: space-between;
}
.index_hotProduct .product_list .product_detail .product_info_wrap .product_price_wrap .product_price {
  color: var(--themeColor);
  font-size: 33rpx;
}
.index_hotProduct .product_list .product_detail .product_info_wrap .product_price_wrap .product_add_wrap  {
  display: flex;
}
.index_hotProduct .product_list .product_detail .product_info_wrap .product_price_wrap .product_add_wrap   .product_add {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 53rpx;
  height: 53rpx;
}


