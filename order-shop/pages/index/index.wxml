<view>
  <!-- 搜索框开始 -->
  <SearchBar></SearchBar>
  <!-- 搜索框结束 -->

  <!-- 轮播图开始 -->
  <view class="index_swiper">
    <swiper autoplay circular indicator-dots>
      <swiper-item wx:for="{{swiperList}}" wx:for-item="swiper" wx:key="id">
        <navigator url="/pages/product_detail/index?id={{swiper.id}}">
          <image mode="widthFix" src="{{baseUrl+'/image/swiper/'+swiper.swiperPic}}"></image>
        </navigator>
      </swiper-item>
    </swiper>
  </view>
  <!-- 轮播图结束 -->

  <!-- 商品大类显示 开始 -->
  <view class="index_bigType">
    <view class="bigTypeRow">
      <navigator bindtap="handleTypeJump" data-index="{{index}}" wx:for="{{bigTypeList_row1}}" wx:for-item="bigType"
        wx:key="id">
        <image mode="widthFix" src="{{baseUrl+'/image/bigType/'+bigType.image}}"></image>
        <view>{{bigType.name}}</view>
      </navigator>
    </view>
    <view class="bigTypeRow">
      <navigator bindtap="handleTypeJump" data-index="{{index+4}}" wx:for="{{bigTypeList_row2}}" wx:for-item="bigType"
        wx:key="id">
        <image mode="widthFix" src="{{baseUrl+'/image/bigType/'+bigType.image}}"></image>
        <view>{{bigType.name}}</view>
      </navigator>
    </view>
  </view>
  <!-- 商品大类显示 结束 -->

  <!-- 商品推荐 开始 -->
  <view class="index_hotProduct">
    <view class="product_title">特色推荐</view>
    <view class="product_list">
      <view class="product_detail" wx:for="{{hotProductList}}" wx:for-item="hotProduct" wx:key="id">
        <!--商品图片 开始  -->
        <navigator class="product_img_wrap" url="/pages/product_detail/index?id={{hotProduct.id}}">
          <image mode="widthFix" src="{{baseUrl+'/image/product/'+hotProduct.proPic}}"></image>
        </navigator>
        <!-- 商品图片 结束 -->
        <!-- 商品信息 开始 -->
      <view class="product_info_wrap">
        <view class="product_name">{{hotProduct.name}}</view>
        <view class="product_description_wrap">
        <view class="product_description">{{hotProduct.description}}</view>
        <view class="product_price_wrap">
        <view class="product_price"> ¥ {{hotProduct.price}}</view>
        <view class="product_add_wrap">
        <view class="product_add" data-index="{{hotProduct.id}}" bindtap="handleCartAdd">
          <image mode="widthFix" src="/icons/add.png"></image>
        </view>
      </view>
        </view>
      </view>
      </view>
        <!-- 商品信息 结束 -->
      </view>
    </view>
  </view>
  <!-- 商品热卖推荐 结束 -->


</view>